<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        *{
            padding: 0rem;
            margin: 0rem;
            box-sizing: border-box;
        }
        body{
            display: flex;
            flex-direction: column;
            gap: 2rem;
            font-family: Arial, Helvetica, sans-serif;
        }
        .search-container{
            width: 100%;
            height: 10vh;
            background-color: rgb(40,42,45);
            color: white;
            display: flex;
            align-items: center;
            gap: 0rem;
            justify-content: center;
        }
        .input{
            height: 2.6rem;
            width: 13rem;
            padding: 0.3rem;
            border-radius: 0.5rem;
            font-size: 1.3rem;
            outline: none;
            border: none;
        }
        .btn{
            height: 2.6rem;
            width: 4.7rem;
            border-radius: 0.5rem;
            color: white;
            background-color: #4285F4;
            font-size: 1rem;
            border: none;
        }
        .btn:hover{
            background-color: #0d47a1;
            cursor: pointer;
        }
        .input::placeholder{
            color: grey;
            font-weight: 200;
            font-size: 1rem;
        }
        .movies-container{
            display: flex;
            gap: 2rem;
            flex-wrap: wrap;
            justify-content: space-between;
            padding: 0rem 2rem;
            background: transparent;
        }
        .depricated{
            color: grey;
            font-weight: 200;
            font-size: 1rem;
        }
        .movie-container{
            width: 20rem;
            height: max-content;
            padding-bottom: 2.3rem;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            gap: 1rem;
            border-radius: 1rem;
            opacity: 0.6;
            transition: 0.6s;
        }
        .movie-container:hover{
            border: 1px solid lightgrey;
            box-shadow: 0px 0px 10px rgb(40,42,45);
            opacity: 1;
        }
        .movie-container img{
            width: 100%;
            height: 8rem;
            border-radius: 0.5rem;
        }
        .movie-container h3{
            color: black;
            font-weight: 600;
            font-size: 1.3rem;
            margin-right: 1rem;
            margin-left: 1rem;
        }
        .infos{
            display: flex;
            gap: 1rem;
            justify-content: space-between;
            padding: 1rem;
        }
        .item{
            color: grey;
            font-size: 1rem;
            font-weight: 300;
        }
        .link{
            color: #4285F4;
            cursor: pointer;
            text-decoration: none;
            font-size: 1.1rem;
            font-weight: 400;
            margin-left: 1rem;
            align-self: center;
        }
        .whole{
            display: flex;
            flex-direction: row;   
            justify-content: space-between;
            align-items: flex-start;
            gap: 2rem;
            width: 100%;
            height: 100%;
            background-color: rgb(40,42,45);
            color: white;
        }
        .right-side{
            height: max-content;
            width: max-content;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .right-side img{
            height: 44rem;
            width: 29rem;
            border-radius: 1rem;
            cursor: pointer;
            opacity: 0.87;
            image-rendering: pixelated;
        }
        .right-side img:hover{
            opacity: 1;
            filter: drop-shadow(2px);
        }
        .left-side{
            margin: 2rem 2rem;
            display: flex;
            flex-direction: column;
            gap: 1.2rem;
            justify-content: flex-start;
            min-width: 30rem;
            min-height: 40rem;
            width: max-content;
            height: max-content;
            border-radius: 1rem;
            padding: 1rem 1.3rem;
        }
        .info-box{
            display: flex;
            border: 1px solid white;
            width: 22rem;
            height: 3rem;
            padding: 1rem 1rem;
            border-radius: 0.7rem;
            display: flex;
            justify-content: space-between;
            transition: 0.4s;
        }
        .info-box:hover{
            border: none;
            box-shadow: 0px 0px 7px lightgrey;
        }
        .movie-name{
            font-size: 4rem;
            color: white;
            font-weight: 600;
        }
        .movie-director{
            font-size: 1.1rem;
            color: lightgrey;
            font-weight: 400;
            letter-spacing: 2px;
        }
        .genres{
            display: flex;
            justify-content: space-between;
            color: lightgrey;
            letter-spacing: 2px;
            margin-top: 1rem;
        }
        .form{
            display: flex;
            flex-direction: column;
            width: 20rem;
            padding: 2rem 2rem;
            height: max-content;
            justify-content: flex-start;
            min-height: 20rem;
            gap: 2rem;
            border: 1px solid white;
            border-radius: 0.896rem;
        }
        .label{
            color: white;
            font-size: 2rem;
            font-weight: 600;
        }
        .sbt{
            width: 100%;
            font-size: 1.1rem;
        }
        .form-input{
            width: 100%;
        }
        .comments{
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            margin: 1rem 0rem;
            gap: 1rem;
        }
        .prim{
            color: #4285F4;
            cursor: pointer;
            font-size: 1.5rem;
            font-weight: 500;
            margin-top: 1rem;
        }
        .comment{
            color: lightgrey;
            font-weight: 300;
            font-size: 1.1rem;
        }
        .link-button{
            width: 100%;
            height: 2.6rem;
            border-radius: 0.5rem;
            color: white;
            background-color: #b23cdf;
            font-size: 1rem;
            border: none;
            display: flex;
            justify-content: center;
            align-items: center;
            text-decoration: none;
            cursor: pointer;
        }
        .search-container{
            color: #fff;
            font-family: Arial, Helvetica, sans-serif;
            font-size: 3.1rem;
            font-weight: 400;
        }
        .related-title{
            color: #fff;
            font-size: 3rem;
            font-weight: 600;
            text-align: center;
            text-shadow: #4285F4 0px 0px 5px;
        }
        .com{
            background-color: rgb(40,42,45);
            height: 100%;
            width: 100%;
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
            justify-content: flex-start;
            padding: 1rem 3rem;
        }
        .relateds-container{
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            gap: 2rem;
            flex-wrap: wrap;
            padding: 0rem 3rem;
        }
        .related-container{
            display: flex;
            flex-direction: column;
            gap: 1rem;
            padding: 0rem;
            border: 1px solid lightgrey;
            border-radius: 1rem;
            height: max-content;
            min-height: 26rem;
            width: 20rem;
        }
        .related-container img{
            border-top-left-radius: 1rem;
            border-top-right-radius: 1rem;
            color: #fff;
            margin-bottom: 1rem;
        }
        .related-container h3{
            color: #fff;
            font-size: 1.3rem;
            margin: 0rem 1.2rem;
        }
        .related-info{
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 1rem 1.2rem;
            color: #fff;
        }
        .genres-con{
            color: #fff;
            margin: 0.5rem 1.2rem;
            align-self: center;
        }

    </style>
</head>